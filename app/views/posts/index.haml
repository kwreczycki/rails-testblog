%h2 tags
= render partial: "tag_cloud", locals: { tag_cloud: tag_cloud }
%h2
  posts
  %small
    = "(#{posts.count})"
  = link_to "add new", new_post_path, class: 'post__button--add pull-right'

%ol
  - posts.each do |post|
    %li.post--short-size
      .post__title= link_to post.title, post_path(post)
      .post__created_at= post.friendly_date
      .post__body= post.truncated_body
      .post__comment= link_to "add comment", new_post_comments_path(post),  class: 'post__button-add'
      - post.comments.each do |comment|
        .post__comment__body= comment.body
        .post__comment__vote_up= link_to "vote up", voteup_post_comments_path(post, comment), :method => :post
        .post__comment__vote_up= link_to "vote down", votedown_post_comments_path(post, comment), :method => :post